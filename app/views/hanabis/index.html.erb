<p id="notice"><%= notice %></p>

<h1>Listing Hanabis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hanabis.each do |hanabi| %>
      <tr>
        <td><%= hanabi.name %></td>
        <td><%= hanabi.data %></td>
        <td><%= link_to 'Show', hanabi %></td>
        <td><%= link_to 'Edit', edit_hanabi_path(hanabi) %></td>
        <td><%= link_to 'Destroy', hanabi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

